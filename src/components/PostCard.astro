---
import { Image } from "astro:assets";
import Timer from "./icons/Timer.astro";
import SquareArrowOut from "./icons/SquareArrowOut.astro";

interface Props {
    title: string;
    href: string;
    description: string;
    category: string;
    image: {
        src: ImageMetadata;
        alt: string;
    };
    timeToReadInMinutes: number;
}

const { title, href, description, image, category, timeToReadInMinutes } =
    Astro.props;
---

<div class="w-full border border-surface-hover rounded-xl bg-surface">
    <div class="grow">
        <Image {...image} class="bg-clip-border h-full rounded-t-xl" />
    </div>
    <div class="p-5 flex flex-col gap-4 grow">
        <div class="flex justify-between">
            <p class="text-accent">{category}</p>
            <div class="flex gap-1 items-center">
                <Timer /><p>{timeToReadInMinutes} min read</p>
            </div>
        </div>
        <div class="flex flex-col gap-2">
            <h2>{title}</h2>
            <p>{description}</p>
        </div>
        <div>
            <a href={href} class="flex gap-1 items-center"
                >Read More<SquareArrowOut /></a
            >
        </div>
    </div>
</div>
